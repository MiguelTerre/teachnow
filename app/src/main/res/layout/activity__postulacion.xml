<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <EditText android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Postularse al empleo"
        android:textAlignment="center"
        android:textColor="#34373b"
        xmlns:android="http://schemas.android.com/apk/res/android" />

    <TextView android:id="@+id/title_job"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Profesor Materias Varias Empleo Faculta Da Vinci\nVilla Devoto"
        android:background="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:padding="@dimen/activity_vertical_margin"
        android:textColor="#ffffff"
        xmlns:android="http://schemas.android.com/apk/res/android" />

    <LinearLayou xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:gravity="center" />
        android:gravity="center">


        <Button
            android:id="@+id/enter_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"


            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Adjuntar CV"
            android:textAlignment="viewStart"
            android:layout_gravity="start"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/facebook_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar CV"
            android:backgroundTint="#559f4d"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>


    </LinearLayout>
